# Variables de entorno para el proyecto - EJEMPLO
# Copia este archivo como .env y completa los valores

# Django settings
DEBUG=True
SECRET_KEY="generate_a_new_secure_key_here"
ALLOWED_HOSTS=localhost,127.0.0.1

# Entorno de ejecuci√≥n (development o production)
DJANGO_ENV=development

# Database settings
DB_NAME=redimensiona_db
DB_USER=your_db_user
DB_PASSWORD=your_db_password
DB_HOST=localhost
DB_PORT=3306

# Celery settings
CELERY_BROKER_URL=amqp://guest:guest@localhost:5672//
CELERY_RESULT_BACKEND=django-db

# Email settings - Usando consola para desarrollo
EMAIL_BACKEND=django.core.mail.backends.console.EmailBackend
EMAIL_HOST=smtp.example.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your_email@example.com
EMAIL_HOST_PASSWORD=your_email_password